@model List<WorkoutLog.Core.Model.Exercise>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container top-edge">
    <h1>
        Hello @ViewBag.Person.UserName      
    </h1>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Sets</th>
                <th>Body Parts</th>
                <th>Exercise</th>
                <th>Weights</th>
                <th>Reps</th>
                <th>Total Weight</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExerciseSets</td>
                    <td>@item.BodyParts</td>
                    <td>@item.ExerciseName</td>
                    <td>@item.Weights</td>
                    <td>@item.Reps</td>
                    <td>@item.TotalWeights</td>
                    <td class="fixed-column">
                        <a href="~/WorkoutLog/Add/@item.ID" class="btn btn-default">Edit</a>
                        <a href="~/WorkoutLog/Delete/@item.ID" class="btn btn-warning" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary btn-md btn-block" href="~/WorkoutLog/Add/">Add New</a>
        </div>
    </div>
</div>


